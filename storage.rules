rules_version = '2';

// Craft rules based on data in your Firestore database
// allow write: if request.auth != null; // Authenticated users only
service firebase.storage {
  match /b/{bucket}/o {
    match /{allPaths=**} {
      allow read: if true; // Or restrict to certain users
      allow write: if request.auth != null; // Authenticated users (admin) only
    }
  }
}
