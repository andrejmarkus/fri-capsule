rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Overaching rule for all documents during debugging
    match /{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Reports specifically allow public creation
    match /reports/{reportId} {
      allow create: if true;
    }
  }
}
